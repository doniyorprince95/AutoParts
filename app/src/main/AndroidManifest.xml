<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mobapplic.autoparts">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ui.activity.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activity.login.LoginActivity"
            android:theme="@style/SignTheme">
        </activity>
        <activity android:name=".view.ui.activity.signup.SignUpActivity"
                  android:theme="@style/SignTheme">
        </activity>
        <activity android:name=".view.ui.activity.reset.ResetPassword"
                  android:theme="@style/SignTheme">
        </activity>
        <activity android:name=".view.ui.activity.main.MainActivity"/>
        <activity android:name=".view.ui.activity.chat.ChatActivity"/>
    </application>

</manifest>