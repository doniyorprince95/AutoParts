<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SignTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="error_appearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="CustomCardViewStyle" parent="AppTheme">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextPrice" parent="AppTheme">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextOrder" parent="AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextOrderDate" parent="AppTheme">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
